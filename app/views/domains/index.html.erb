<div class="col-md-10">
  <h3>Domains</h3>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Kind</th>
        <th>Url</th>
        <th>Description</th>
        <th>Search Depth</th>
        <th>Status</th>
        <th>Status Date</th>
        <th>Searched At</th>
      </tr>
    </thead>

    <tbody>
      <% @domains.each do |domain| %>
        <tr>
          <td><%= domain.name %></td>
          <td><%= domain.kind %></td>
          <td><%= domain.url %></td>
          <td><%= domain.description %></td>
          <td><%= domain.search_depth %></td>
          <td><%= domain.status %></td>
          <td><%= domain.status_date %></td>
          <td><%= domain.searched_at %></td>
          <td><%= link_to 'Edit', edit_domain_path(domain), class: 'btn btn-warning btn-xs' %>
          <%= link_to 'Delete', domain, method: :delete, data: { confirm: "Are you sure you want to delete? "}, class: 'btn btn-danger btn-xs' %>
          </td>
          <td><%= link_to "Run #{domain.name} Process", perform_processor_path(id: domain.id), data: { confirm: "Are you sure you want to run this process? "}, class: 'btn btn-default btn-xs' %><td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Add domain", new_domain_path, class: 'btn btn-primary btn-xs' %>
</div>
